<div class="main users-new">
  <div class="container">
    <div class="form-heading">新規トレーナー登録</div>
    <div class="form users-form">
    <div class="form-body">
      <% @trainer.errors.full_messages.each do |message| %>
        <div class="form-error">
          <%= message %>
        </div>
      <% end %>
      <%= form_tag("/trainers/create") do %>
        <p>ユーザー名</p>
        <input name="name" value="<%= @trainer.name %>">
        
        <p>メールアドレス</p>
        <input name="email" value="<%= @trainer.email %>">
        
        <input type="submit" value="新規登録">
      <% end %>
      </div>
    </div>
  </div>
</div>