<div class="main user-show">
  <div class="container">
    <div class="user">
      <img src="<%= "/trainer_images/#{@trainer.image_name}" %>"> 
      <h2><%= @trainer.name %></h2>
      <p><%= @trainer.email %></p>
      <%= link_to("編集", "/users/#{@user.id}/edit") %>
      <%= button_to("アカウント削除", "/users/#{@user.id}/destroy") %>
      <h3>プロフィール</h3>
      <p><%= @trainer.location %>  <%= @trainer.gender %>  <%= @trainer.age %></p>
      <p class="text_display"><%= @trainer.profile %></p>
      
      <% if Interest.find_by(user_id: @current_user.id, trainer_id: @trainer.id) %>
        <%= button_to("取り消し", "/interests/#{@trainer.id}/destroy") %>
      <% else %>
        <%= button_to("話を聞きたい", "/interests/#{@trainer.id}/create") %>
      <% end %>
    </div>
  </div>
</div>
